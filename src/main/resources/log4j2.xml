<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="File" fileName="logs/log4jlogging.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="logbacklogging.log4jlogging" level="debug" additivity="false">
            <AppederRef ref="Console"/>
            <AppederRef ref="File"/>
        </Logger>

        <Logger name="org.springframework.web" level="debug" additivity="false">
            <AppederRef ref="Console"/>
            <AppederRef ref="File"/>
        </Logger>

        <Root level="error">
            <AppederRef ref="Console"/>
            <AppederRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>